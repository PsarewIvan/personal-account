                        .access-tag Текст основного соглашения
                        .access-tag Текст доп. соглашения
                        .access-tag Уведомления
                        .access-tag Лицензии
                        .access-tag Доступы
                        .access-tag Реферальная программа
                        .access-tag История
                        .access-tag Лента событий
                .table-cell.align-start
                    button.table-button.tooltip-trigger.js-tooltip-trigger(type='button')
                        +icon-edit('table-icon')
                        +tooltip('Редактировать')
