include ./button.pug

mixin alert-button(title='', texts, button, className)
    .alert-button(class=className)
        .alert-button__content
            if title !== ''
                .alert-button__title= title
            each text in texts
                div.alert-button__text= text
        if button
            +button(button, 's', 'primary', 'alert-button__button js-alert-button')
